---
/**
 * TrustBadges - Display trust signals and guarantees
 *
 * Shows key trust indicators to build customer confidence.
 */
import { siteConfig, getReviewStats } from '../config/site';

interface Props {
  variant?: 'horizontal' | 'grid' | 'compact';
  showRating?: boolean;
  showGuarantees?: boolean;
}

const {
  variant = 'horizontal',
  showRating = true,
  showGuarantees = true,
} = Astro.props;

const reviewStats = getReviewStats();

const guarantees = [
  {
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
    title: "Wind & Watertight",
    description: "Guaranteed",
  },
  {
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" /></svg>`,
    title: "Free Delivery",
    description: "Within 50km",
  },
  {
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    title: "Fast Response",
    description: "Within 2 hours",
  },
  {
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" /></svg>`,
    title: "Local Support",
    description: "Saskatchewan Based",
  },
];

const containerClasses = {
  horizontal: 'flex flex-wrap items-center justify-center gap-6 sm:gap-8',
  grid: 'grid grid-cols-2 sm:grid-cols-4 gap-4',
  compact: 'flex flex-wrap items-center justify-center gap-4',
};
---

<div class="trust-badges">
  {/* Rating Badge */}
  {showRating && reviewStats.totalCount > 0 && (
    <div class="flex items-center justify-center gap-2 mb-6">
      <div class="flex items-center gap-1">
        {[1, 2, 3, 4, 5].map((star) => (
          <svg
            class={`h-5 w-5 ${star <= Math.round(reviewStats.averageRating) ? 'text-yellow-400' : 'text-gray-300'}`}
            fill="currentColor"
            viewBox="0 0 20 20"
            aria-hidden="true"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <span class="font-semibold text-gray-900">{reviewStats.averageRating.toFixed(1)}</span>
      <span class="text-gray-500">({reviewStats.totalCount}+ Google Reviews)</span>
    </div>
  )}

  {/* Guarantee Badges */}
  {showGuarantees && (
    <div class={containerClasses[variant]}>
      {guarantees.map((guarantee) => (
        <div class={`flex items-center gap-3 ${variant === 'grid' ? 'flex-col text-center p-4 bg-gray-50 rounded-lg' : ''}`}>
          <div class={`flex-shrink-0 ${variant === 'grid' ? 'mx-auto' : ''} text-primary-600`}>
            <Fragment set:html={guarantee.icon} />
          </div>
          <div>
            <p class="font-semibold text-gray-900 text-sm">{guarantee.title}</p>
            <p class="text-gray-500 text-xs">{guarantee.description}</p>
          </div>
        </div>
      ))}
    </div>
  )}
</div>
