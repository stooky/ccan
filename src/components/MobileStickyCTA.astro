---
/**
 * MobileStickyCTA - Sticky call-to-action bar for mobile devices
 *
 * Shows a persistent call button at the bottom of the screen on mobile.
 * Improves conversion by making contact always one tap away.
 */
import { siteConfig } from '../config/site';

interface Props {
  phoneText?: string;
  showWhatsApp?: boolean;
}

const {
  phoneText = "Call Now",
  showWhatsApp = true,
} = Astro.props;

const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in your shipping containers.")}`;
---

<!-- Mobile Sticky CTA - Only visible on mobile/tablet -->
<div id="mobile-sticky-cta" class="fixed bottom-0 left-0 right-0 z-50 md:hidden bg-white border-t border-gray-200 shadow-lg safe-area-bottom">
  <div class="flex gap-2 p-3">
    <!-- Primary: Phone Call -->
    <a
      href={phoneLink}
      class="flex-1 inline-flex items-center justify-center gap-2 rounded-lg bg-primary-600 px-4 py-3.5 text-base font-semibold text-white shadow-sm transition-colors hover:bg-primary-700 active:bg-primary-800"
    >
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
      </svg>
      {phoneText}
    </a>

    {showWhatsApp && (
      <!-- Secondary: WhatsApp -->
      <a
        href={whatsappLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-4 py-3.5 text-base font-semibold text-white shadow-sm transition-colors hover:bg-green-700 active:bg-green-800"
        aria-label="Contact us on WhatsApp"
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
      </a>
    )}
  </div>
</div>

<!-- Spacer to prevent content from being hidden behind sticky CTA -->
<div class="h-20 md:hidden" aria-hidden="true"></div>

<style>
  /* Safe area for devices with notch/home indicator */
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom, 0);
  }

  /* Hide when user has scrolled to footer */
  #mobile-sticky-cta.hidden-by-footer {
    transform: translateY(100%);
    transition: transform 0.3s ease-out;
  }

  #mobile-sticky-cta {
    transition: transform 0.3s ease-out;
  }
</style>

<script>
  // Hide sticky CTA when footer is visible
  document.addEventListener('DOMContentLoaded', () => {
    const stickyCTA = document.getElementById('mobile-sticky-cta');
    const footer = document.querySelector('footer');

    if (!stickyCTA || !footer) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            stickyCTA.classList.add('hidden-by-footer');
          } else {
            stickyCTA.classList.remove('hidden-by-footer');
          }
        });
      },
      { threshold: 0.1 }
    );

    observer.observe(footer);
  });
</script>
