---
/**
 * CaseStudies - Customer success stories
 *
 * Displays real customer examples to build trust and demonstrate value.
 */

interface CaseStudy {
  title: string;
  category: string;
  description: string;
  result: string;
  containerType: string;
  location: string;
  image?: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  maxItems?: number;
}

const {
  title = "Customer Success Stories",
  subtitle = "See how Saskatchewan residents and businesses use our containers",
  maxItems = 3,
} = Astro.props;

// Sample case studies (in real implementation, these would come from CMS or data file)
const caseStudies: CaseStudy[] = [
  {
    title: "Farm Equipment Storage",
    category: "Agricultural",
    description: "A family farm near Warman needed secure storage for valuable equipment during the off-season. They purchased a 40ft high cube container to store their combine parts, tools, and seasonal equipment.",
    result: "Saved $5,000+ annually compared to renting off-site storage. Equipment stays dry and secure year-round.",
    containerType: "40ft High Cube",
    location: "Warman, SK",
  },
  {
    title: "Home Renovation Storage",
    category: "Residential",
    description: "A Saskatoon homeowner undergoing a major kitchen renovation needed temporary storage for furniture and appliances. They rented a 20ft container for 3 months.",
    result: "Convenient on-site access to belongings during renovation. No trips to a storage facility needed.",
    containerType: "20ft Standard (Rental)",
    location: "Saskatoon, SK",
  },
  {
    title: "Construction Site Security",
    category: "Commercial",
    description: "A construction company needed secure tool storage at multiple job sites across Saskatoon. They purchased three 20ft containers for their fleet.",
    result: "Eliminated tool theft. Containers move between sites as projects complete. ROI in first year.",
    containerType: "20ft Standard (x3)",
    location: "Multiple Sites",
  },
  {
    title: "Small Business Inventory",
    category: "Commercial",
    description: "A growing e-commerce business needed overflow inventory space. They rented a 40ft container placed behind their Martensville warehouse.",
    result: "Doubled storage capacity at 1/4 the cost of commercial warehouse space.",
    containerType: "40ft Standard (Rental)",
    location: "Martensville, SK",
  },
  {
    title: "Seasonal Recreation Storage",
    category: "Residential",
    description: "A family with boats, ATVs, and snowmobiles needed year-round secure storage. They purchased a 40ft container for their acreage.",
    result: "All recreational equipment protected from weather and theft. Quick access when needed.",
    containerType: "40ft High Cube",
    location: "Corman Park, SK",
  },
];

const displayedStudies = caseStudies.slice(0, maxItems);

const categoryColors: Record<string, { bg: string; text: string }> = {
  Agricultural: { bg: 'bg-green-100', text: 'text-green-800' },
  Residential: { bg: 'bg-blue-100', text: 'text-blue-800' },
  Commercial: { bg: 'bg-purple-100', text: 'text-purple-800' },
};
---

<section class="py-16 sm:py-20 bg-gray-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    {title && (
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          {title}
        </h2>
        {subtitle && (
          <p class="mt-4 text-lg text-gray-600 max-w-2xl mx-auto">
            {subtitle}
          </p>
        )}
      </div>
    )}

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {displayedStudies.map((study) => {
        const colors = categoryColors[study.category] || { bg: 'bg-gray-100', text: 'text-gray-800' };
        return (
          <article class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-lg transition-shadow">
            <!-- Category Badge -->
            <div class="px-6 pt-6">
              <span class={`inline-flex items-center rounded-full px-3 py-1 text-xs font-medium ${colors.bg} ${colors.text}`}>
                {study.category}
              </span>
            </div>

            <!-- Content -->
            <div class="p-6">
              <h3 class="text-lg font-bold text-gray-900">
                {study.title}
              </h3>

              <p class="mt-3 text-gray-600 text-sm">
                {study.description}
              </p>

              <!-- Result highlight -->
              <div class="mt-4 rounded-lg bg-green-50 border border-green-100 p-3">
                <p class="text-sm text-green-800">
                  <span class="font-semibold">Result:</span> {study.result}
                </p>
              </div>

              <!-- Details -->
              <dl class="mt-4 grid grid-cols-2 gap-4 text-sm">
                <div>
                  <dt class="text-gray-500">Container</dt>
                  <dd class="font-medium text-gray-900">{study.containerType}</dd>
                </div>
                <div>
                  <dt class="text-gray-500">Location</dt>
                  <dd class="font-medium text-gray-900">{study.location}</dd>
                </div>
              </dl>
            </div>
          </article>
        );
      })}
    </div>

    <!-- CTA -->
    <div class="mt-12 text-center">
      <p class="text-gray-600 mb-4">
        Ready to write your own success story?
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 rounded-lg bg-primary-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-700 transition-colors"
      >
        Get Your Free Quote
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </div>
</section>
