---
/**
 * ExitIntentModal - Capture visitors who are about to leave
 *
 * Shows a modal when user's mouse moves toward closing the tab.
 * Offers a compelling reason to stay or convert.
 */
import { siteConfig } from '../config/site';

interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const {
  title = "Wait! Before You Go...",
  subtitle = "Get a free quote and find out why 55+ customers gave us 5 stars.",
  ctaText = "Get My Free Quote",
  ctaHref = "/contact",
} = Astro.props;

const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;
---

<!-- Exit Intent Modal -->
<div
  id="exit-intent-modal"
  class="fixed inset-0 z-[100] hidden"
  role="dialog"
  aria-labelledby="exit-modal-title"
  aria-modal="true"
>
  <!-- Backdrop -->
  <div class="fixed inset-0 bg-gray-900/75 transition-opacity" id="exit-modal-backdrop"></div>

  <!-- Modal Content -->
  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center">
      <div class="relative transform overflow-hidden rounded-2xl bg-white text-left shadow-xl transition-all w-full max-w-lg">
        <!-- Close button -->
        <button
          type="button"
          id="exit-modal-close"
          class="absolute top-4 right-4 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 rounded-lg p-1"
          aria-label="Close modal"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>

        <div class="p-6 sm:p-8">
          <!-- Icon -->
          <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-100">
            <svg class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
            </svg>
          </div>

          <!-- Content -->
          <div class="mt-4 text-center">
            <h3 id="exit-modal-title" class="text-2xl font-bold text-gray-900">
              {title}
            </h3>
            <p class="mt-3 text-gray-600">
              {subtitle}
            </p>
          </div>

          <!-- Trust Signals -->
          <div class="mt-6 flex items-center justify-center gap-4 text-sm text-gray-500">
            <div class="flex items-center gap-1">
              <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span>5.0 Rating</span>
            </div>
            <span class="text-gray-300">|</span>
            <span>55+ Reviews</span>
            <span class="text-gray-300">|</span>
            <span>Free Delivery</span>
          </div>

          <!-- CTAs -->
          <div class="mt-6 space-y-3">
            <a
              href={ctaHref}
              class="block w-full rounded-lg bg-primary-600 px-6 py-3 text-center text-base font-semibold text-white shadow-sm hover:bg-primary-700 transition-colors"
            >
              {ctaText}
            </a>
            <a
              href={phoneLink}
              class="block w-full rounded-lg bg-gray-100 px-6 py-3 text-center text-base font-semibold text-gray-900 hover:bg-gray-200 transition-colors"
            >
              <span class="inline-flex items-center gap-2">
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                </svg>
                Call {siteConfig.contact.phone}
              </span>
            </a>
          </div>

          <!-- No thanks link -->
          <button
            type="button"
            id="exit-modal-dismiss"
            class="mt-4 w-full text-center text-sm text-gray-500 hover:text-gray-700"
          >
            No thanks, I'll keep browsing
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('exit-intent-modal');
    const backdrop = document.getElementById('exit-modal-backdrop');
    const closeBtn = document.getElementById('exit-modal-close');
    const dismissBtn = document.getElementById('exit-modal-dismiss');

    if (!modal) return;

    // Check if modal was already shown this session
    const modalShown = sessionStorage.getItem('exitModalShown');
    if (modalShown) return;

    let hasTriggered = false;

    function showModal() {
      if (hasTriggered) return;
      hasTriggered = true;
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      sessionStorage.setItem('exitModalShown', 'true');

      // Focus the first focusable element
      const firstFocusable = modal.querySelector('a, button');
      if (firstFocusable) {
        (firstFocusable as HTMLElement).focus();
      }
    }

    function hideModal() {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
    }

    // Exit intent detection - mouse leaves viewport at top
    document.addEventListener('mouseout', (e) => {
      // Only trigger when mouse leaves at the top of the page
      if (e.clientY <= 0 && !hasTriggered) {
        // Also check if user has been on page for at least 5 seconds
        // and has scrolled a bit (engaged user)
        const timeOnPage = performance.now();
        const hasScrolled = window.scrollY > 200;

        if (timeOnPage > 5000 && hasScrolled) {
          showModal();
        }
      }
    });

    // Close handlers
    closeBtn?.addEventListener('click', hideModal);
    dismissBtn?.addEventListener('click', hideModal);
    backdrop?.addEventListener('click', hideModal);

    // Escape key to close
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        hideModal();
      }
    });
  });
</script>

<style>
  /* Animation for modal appearance */
  #exit-intent-modal:not(.hidden) > div:last-child > div > div {
    animation: modal-enter 0.3s ease-out;
  }

  @keyframes modal-enter {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-10px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    #exit-intent-modal:not(.hidden) > div:last-child > div > div {
      animation: none;
    }
  }
</style>
