---
/**
 * FAQSchema Component
 * Generates JSON-LD structured data for FAQ pages
 * Triggers expandable FAQ rich snippets in Google search results
 */

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs: FAQItem[];
}

const { faqs } = Astro.props;

const schema = faqs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
} : null;
---

{schema && (
  <script is:inline type="application/ld+json" set:html={JSON.stringify(schema)} />
)}
