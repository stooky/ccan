---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import TrustBadges from '../components/TrustBadges.astro';
import AvailabilityChecker from '../components/AvailabilityChecker.astro';
import QuickQuoteForm from '../components/QuickQuoteForm.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm looking for shipping containers in Saskatoon.")}`;

// Saskatoon-specific FAQs
const faqs = [
  {
    question: "Where can I buy shipping containers in Saskatoon?",
    answer: "C-Can Sam is located in Martensville, just minutes from Saskatoon. We offer same-day delivery to Saskatoon and surrounding areas including Warman, Osler, Dalmeny, and Corman Park. New containers start at $4,000 and used containers from $3,000."
  },
  {
    question: "How much does container delivery cost in Saskatoon?",
    answer: "Delivery is FREE within 50km of our Martensville location, which covers all of Saskatoon and surrounding communities. For locations beyond 50km, delivery fees are calculated based on distance. Contact us for a quote."
  },
  {
    question: "Can I get same-day container delivery in Saskatoon?",
    answer: "Yes! We offer same-day delivery in Saskatoon for in-stock containers when ordered before noon. Contact us in the morning and we can often have your container delivered the same afternoon."
  },
  {
    question: "What size containers are available in Saskatoon?",
    answer: "We carry 20ft standard, 40ft standard, 40ft high cube, and 9ft mini containers. The 20ft container is our most popular for residential use, while 40ft containers are preferred for commercial and construction sites."
  },
  {
    question: "Do you offer container rentals in Saskatoon?",
    answer: "Yes! We offer flexible month-to-month container rentals starting at $150/month for 20ft containers. Delivery and pickup are included within 50km. No long-term contract required."
  },
  {
    question: "What neighborhoods in Saskatoon do you deliver to?",
    answer: "We deliver to all Saskatoon neighborhoods including downtown, Sutherland, Silverspring, Stonebridge, Brighton, Evergreen, University Heights, Willowgrove, and all surrounding areas. We also serve commercial and industrial zones."
  },
];

// Saskatoon neighborhoods/areas served
const areas = [
  "Downtown Saskatoon", "Sutherland", "Silverspring", "Stonebridge", "Brighton",
  "Evergreen", "University Heights", "Willowgrove", "Hampton Village", "Rosewood",
  "Kensington", "College Park", "Lakeview", "Buena Vista", "Nutana",
];
---

<Layout
  title="Shipping Containers Saskatoon - Buy, Rent, Store | C-Can Sam"
  description="Shipping containers for sale and rent in Saskatoon, SK. New containers from $4,000, used from $3,000. Same-day delivery. Rentals from $150/month. Call 1-844-473-2226."
>
  <FAQSchema faqs={faqs} />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-16 sm:py-24">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-green-500/10 px-4 py-1.5 text-sm font-medium text-green-300 ring-1 ring-inset ring-green-500/20">
            Same-Day Delivery Available
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl">
            Shipping Containers
            <span class="text-primary-400">Saskatoon</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Buy, rent, or store shipping containers in Saskatoon and area. New containers from $4,000, used from $3,000. Free delivery within 50km. Same-day service available.
          </p>

          <div class="mt-6">
            <TrustBadges variant="compact" showRating={true} showGuarantees={false} />
          </div>

          <!-- Primary CTAs -->
          <div class="mt-8 flex flex-col gap-4 sm:flex-row">
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-primary-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-primary-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call 1-844-473-2226
            </a>
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers for sale in Saskatoon"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Availability Banner -->
  <div class="bg-white py-6 border-b border-gray-200">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <AvailabilityChecker variant="banner" />
    </div>
  </div>

  <!-- Pricing Overview -->
  <Section
    title="Container Prices in Saskatoon"
    subtitle="Competitive pricing with free local delivery"
  >
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4 max-w-5xl mx-auto">
      {siteConfig.products.containers.map((container) => (
        <div class="rounded-xl border border-gray-200 bg-white p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-lg font-bold text-gray-900">{container.size}</h3>
          <div class="mt-4 space-y-2">
            {container.new && (
              <div>
                <span class="text-xs text-gray-500 uppercase tracking-wide">New</span>
                <p class="text-xl font-bold text-primary-600">
                  ${container.new.min.toLocaleString()} - ${container.new.max.toLocaleString()}
                </p>
              </div>
            )}
            {container.used && (
              <div>
                <span class="text-xs text-gray-500 uppercase tracking-wide">Used</span>
                <p class="text-xl font-bold text-gray-700">
                  ${container.used.min.toLocaleString()} - ${container.used.max.toLocaleString()}
                </p>
              </div>
            )}
            {!container.new && !container.used && (
              <p class="text-lg text-gray-500">Call for pricing</p>
            )}
          </div>
          <a
            href={`/containers/${container.slug}`}
            class="mt-4 inline-block text-sm font-medium text-primary-600 hover:text-primary-700"
          >
            View Details â†’
          </a>
        </div>
      ))}
    </div>

    <p class="mt-6 text-center text-gray-600">
      <strong>Free delivery</strong> within 50km of Martensville (covers all of Saskatoon)
    </p>
  </Section>

  <!-- Services -->
  <Section
    title="Our Services in Saskatoon"
    subtitle="Complete container solutions for residential and commercial needs"
    background="gray"
  >
    <div class="grid gap-6 md:grid-cols-3 max-w-4xl mx-auto">
      <a href="/seacan-storage-containers-for-sale" class="group block rounded-xl bg-white p-6 shadow-sm hover:shadow-lg transition-shadow">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 text-primary-600 group-hover:bg-primary-600 group-hover:text-white transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Buy</h3>
        <p class="mt-2 text-gray-600">Own a container outright. New from $4,000, used from $3,000.</p>
      </a>

      <a href="/storage-container-rentals" class="group block rounded-xl bg-white p-6 shadow-sm hover:shadow-lg transition-shadow">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Rent</h3>
        <p class="mt-2 text-gray-600">Flexible month-to-month rentals from $150/month. No long-term contract.</p>
      </a>

      <a href="/on-site-storage-rentals" class="group block rounded-xl bg-white p-6 shadow-sm hover:shadow-lg transition-shadow">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 text-green-600 group-hover:bg-green-600 group-hover:text-white transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Store</h3>
        <p class="mt-2 text-gray-600">Secure on-site storage at our Martensville facility from $75/month.</p>
      </a>
    </div>
  </Section>

  <!-- Areas Served -->
  <Section
    title="Saskatoon Areas We Serve"
    subtitle="Free delivery to all Saskatoon neighborhoods"
  >
    <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
      {areas.map((area) => (
        <span class="inline-flex items-center rounded-full bg-gray-100 px-4 py-2 text-sm font-medium text-gray-700">
          {area}
        </span>
      ))}
    </div>
    <p class="mt-6 text-center text-gray-600">
      Plus Warman, Martensville, Osler, Dalmeny, Corman Park, and surrounding rural areas.
    </p>
  </Section>

  <!-- Quote Form -->
  <Section
    title="Get a Free Quote"
    subtitle="Tell us what you need and we'll get back to you within 2 hours"
    background="gray"
  >
    <div class="max-w-xl mx-auto">
      <QuickQuoteForm />
    </div>
  </Section>

  <!-- FAQs -->
  <Section
    title="Saskatoon Container FAQs"
    subtitle="Common questions about containers in Saskatoon"
  >
    <div class="mx-auto max-w-3xl space-y-4">
      {faqs.map((faq) => (
        <details class="group rounded-lg bg-gray-50 p-6">
          <summary class="flex cursor-pointer items-center justify-between font-semibold text-gray-900">
            {faq.question}
            <svg class="h-5 w-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">{faq.answer}</p>
        </details>
      ))}
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready for Your Container?"
    description="Contact C-Can Sam today for same-day delivery in Saskatoon. New and used containers in stock."
    primaryButton={{ text: "Call Now", href: phoneLink }}
    secondaryButton={{ text: "Get a Quote", href: "/contact" }}
  />
</Layout>
