---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

// WhatsApp link with pre-filled message
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in renting a shipping container delivered to my location.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Container Types for Rent - delivered to customer location
const containers = [
  {
    size: "20' Standard",
    dimensions: "20' L × 8' W × 8'6\" H",
    capacity: "1,172 cubic feet",
    ideal: "Residential storage, renovations, small moves",
    image: "/images/containers/20-standard.png",
    popular: false,
    rental: { min: 150, max: 175 },
    deposit: 300,
  },
  {
    size: "40' Standard",
    dimensions: "40' L × 8' W × 8'6\" H",
    capacity: "2,390 cubic feet",
    ideal: "Construction sites, business overflow, large projects",
    image: "/images/containers/40-standard.png",
    popular: true,
    rental: { min: 200, max: 250 },
    deposit: 400,
  },
  {
    size: "40' High Cube",
    dimensions: "40' L × 8' W × 9'6\" H",
    capacity: "2,694 cubic feet",
    ideal: "Tall equipment, workshops, maximum flexibility",
    image: "/images/containers/40-high-cube.png",
    popular: false,
    rental: { min: 225, max: 275 },
    deposit: 400,
  },
];

// Benefits of Renting (delivered to your location)
const benefits = [
  {
    title: "On Your Property",
    description: "Container stays at your location for convenient 24/7 access. No trips to a storage facility needed.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>`,
  },
  {
    title: "Flexible Terms",
    description: "Month-to-month rentals with no long-term commitment. Keep it as long as you need.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>`,
  },
  {
    title: "We Handle Delivery",
    description: "We deliver to your location and pick up when you're done. No hassle, no extra equipment needed.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" /></svg>`,
  },
  {
    title: "Lower Upfront Cost",
    description: "No large purchase required. Simple monthly payments that fit your budget.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
];

// Who rents containers
const renters = [
  { title: "Home Renovators", description: "Store furniture and belongings on-site during your renovation project." },
  { title: "Construction Sites", description: "Secure tools and materials right on your job site for the duration." },
  { title: "People Moving", description: "Bridge the gap between homes. Take your time packing and unpacking." },
  { title: "Seasonal Businesses", description: "Expand storage capacity during busy seasons without permanent commitment." },
  { title: "Farmers & Ranchers", description: "Store equipment and supplies on your property during harvest or off-season." },
  { title: "Event Organizers", description: "Keep equipment and supplies on-site for multi-day events and festivals." },
];
---

<Layout
  title="Container Rentals - Delivered to Your Location | Saskatchewan"
  description="Rent shipping containers delivered to your property in Saskatchewan. 20ft, 40ft & High Cube containers from $150/month. We deliver, you use it, we pick up. No long-term contracts. Call 1-844-473-2226."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-blue-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-blue-500/10 px-4 py-1.5 text-sm font-medium text-blue-300 ring-1 ring-inset ring-blue-500/20">
            Delivered to Your Location
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Container
            <span class="text-blue-400">Rentals</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Need storage at your property? We deliver a container to your location and pick it up when you're done. Flexible month-to-month terms with no long-term commitment.
          </p>

          <!-- Primary CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us Now
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers available for rent in Saskatchewan"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200, 1400]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 rounded-xl bg-blue-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">Delivered To You</p>
            <p class="text-lg font-bold text-white">Month-to-Month</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Banner -->
  <div class="bg-blue-600 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 text-center font-bold text-white">
        <span>Delivered to Your Property</span>
        <span class="hidden sm:inline">•</span>
        <span>Delivery & Pickup Included</span>
        <span class="hidden sm:inline">•</span>
        <span>No Long-Term Contract</span>
      </div>
    </div>
  </div>

  <!-- Google Reviews Widget (after hero) -->
  <ReviewWidget pagePath="/storage-container-rentals" />

  <!-- Container Types - matching sales page layout -->
  <Section
    title="Containers For Rent"
    subtitle="Delivered to your location. Flexible month-to-month rentals throughout Saskatchewan."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {containers.map((container) => (
        <div class={`relative rounded-2xl bg-white p-6 shadow-sm transition-all hover:shadow-xl ${container.popular ? 'ring-2 ring-blue-500' : ''}`}>
          {container.popular && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-blue-500 px-4 py-1 text-sm font-semibold text-white">
              Most Popular
            </span>
          )}

          <!-- Container Visual -->
          <div class="flex items-center justify-center bg-transparent p-4">
            <img
              src={container.image}
              alt={`${container.size} shipping container for rent in Saskatchewan`}
              class="h-auto w-full max-h-48 object-contain"
              loading="lazy"
              decoding="async"
            />
          </div>

          <h3 class="mt-4 text-2xl font-bold text-gray-900">{container.size}</h3>

          <!-- Pricing Section - similar to sales page -->
          <div class="mt-4 grid grid-cols-2 gap-3">
            {/* Monthly Rental - Blue */}
            <div class="rounded-lg bg-blue-50 p-3 border border-blue-100">
              <p class="text-xs font-medium text-blue-700 uppercase tracking-wide">Monthly</p>
              <p class="mt-1 text-lg font-bold text-blue-800">
                ${container.rental.min}<span class="text-sm font-normal">-${container.rental.max}</span>
              </p>
            </div>
            {/* Deposit - Gray */}
            <div class="rounded-lg bg-gray-100 p-3 border border-gray-300">
              <p class="text-xs font-medium text-gray-700 uppercase tracking-wide">Deposit</p>
              <p class="mt-1 text-lg font-bold text-gray-900">
                ${container.deposit}
              </p>
            </div>
          </div>

          <dl class="mt-4 space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">Dimensions</dt>
              <dd class="font-medium text-gray-900">{container.dimensions}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Capacity</dt>
              <dd class="font-medium text-gray-900">{container.capacity}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Ideal for</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%]">{container.ideal}</dd>
            </div>
          </dl>

          <div class="mt-6 flex gap-2">
            <a
              href={whatsappLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-green-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-green-500"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
            <a
              href={phoneLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-blue-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-blue-500"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call Us
            </a>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-gray-600">
      Prices shown are monthly rates. Final price depends on location and rental duration.
      <br /><strong>Delivery & pickup included within 50km.</strong> <a href={phoneLink} class="font-medium text-blue-600 hover:text-blue-700">Call us</a> for rates beyond 50km.
    </p>
    <p class="mt-2 text-center">
      <a href="/rental-terms" class="text-sm font-medium text-blue-600 hover:text-blue-700">
        View full rental terms & conditions →
      </a>
    </p>
  </Section>

  <!-- Why Rent Section -->
  <Section
    title="Why Rent a Container?"
    subtitle="The smart choice for on-site storage at your location."
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {benefits.map((benefit) => (
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 text-blue-600">
            <Fragment set:html={benefit.icon} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{benefit.title}</h3>
          <p class="mt-2 text-gray-600">{benefit.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- How It Works -->
  <Section
    title="How It Works"
    subtitle="Simple process from start to finish."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      <div class="relative text-center">
        <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-xl font-bold text-white">1</div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Choose Your Size</h3>
        <p class="mt-2 text-gray-600">Pick the container size that fits your storage needs.</p>
      </div>
      <div class="relative text-center">
        <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-xl font-bold text-white">2</div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">We Deliver</h3>
        <p class="mt-2 text-gray-600">We bring the container directly to your property.</p>
      </div>
      <div class="relative text-center">
        <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-xl font-bold text-white">3</div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Use It</h3>
        <p class="mt-2 text-gray-600">Store your items with 24/7 access at your location.</p>
      </div>
      <div class="relative text-center">
        <div class="mx-auto flex h-14 w-14 items-center justify-center rounded-full bg-blue-600 text-xl font-bold text-white">4</div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">We Pick Up</h3>
        <p class="mt-2 text-gray-600">When you're done, we come and pick it up. Simple!</p>
      </div>
    </div>
  </Section>

  <!-- Who Rents Section -->
  <Section
    title="Who Rents Containers?"
    subtitle="Perfect for anyone needing storage at their location."
  >
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {renters.map((renter) => (
        <div class="rounded-lg bg-gray-50 p-6 shadow-sm">
          <h3 class="font-semibold text-gray-900">{renter.title}</h3>
          <p class="mt-2 text-gray-600">{renter.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- On-Site Storage Callout -->
  <Section background="gray">
    <div class="rounded-2xl bg-primary-50 p-8 text-center border-2 border-primary-200">
      <h3 class="text-2xl font-bold text-gray-900">Don't Have Space on Your Property?</h3>
      <p class="mt-2 text-gray-600 max-w-2xl mx-auto">
        We also offer secure container storage at our Martensville facility. Store your belongings with us and access them during business hours. Lower monthly rates, no delivery fees.
      </p>
      <a
        href="/on-site-storage-rentals"
        class="mt-6 inline-flex items-center gap-2 rounded-lg bg-primary-600 px-6 py-3 font-semibold text-white hover:bg-primary-500 transition-colors"
      >
        Learn About Yard Storage
        <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
        </svg>
      </a>
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Ready to Rent a Container?"
    description="Contact us today for current availability and rental rates. We'll deliver right to your property."
    primaryButton={{ text: "Call Now", href: phoneLink }}
    secondaryButton={{ text: "Contact Us", href: "/contact" }}
  />
</Layout>
