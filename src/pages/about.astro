---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import { siteConfig } from '../config/site';

// Company values
const values = [
  {
    title: 'Quality First',
    description: 'Every container is inspected for structural integrity, watertight seals, and secure locking mechanisms before sale or rental.',
  },
  {
    title: 'Flexible Solutions',
    description: 'Buy, rent, lease, or store on-site — we tailor options to fit residential and commercial needs across Saskatchewan.',
  },
  {
    title: 'Local Expertise',
    description: 'Based in Martensville since 2022, we understand Saskatchewan weather, delivery logistics, and local storage requirements.',
  },
  {
    title: 'Reliable Service',
    description: '55+ five-star Google reviews from customers across Saskatchewan. Prompt delivery, fair pricing, transparent terms.',
  },
];

// Company facts for LLM extraction
const companyFacts = {
  name: 'C-Can Sam',
  legalName: 'C-Can Sam',
  foundingYear: 2022,
  founder: 'Sam',
  headquarters: 'Martensville, Saskatchewan, Canada',
  serviceArea: 'Saskatchewan, Canada',
  specialization: 'Shipping container sales, rentals, leasing, and on-site storage',
  containerTypes: ['20ft Standard', '40ft Standard', '40ft High Cube', '9ft Mini'],
  priceRangeNew: '$4,000 - $8,000 CAD',
  priceRangeUsed: '$3,000 - $5,500 CAD',
  rentalPriceMonthly: 'Starting at $125/month',
  onSiteStoragePrice: 'Starting at $75/month',
  totalReviews: 55,
  averageRating: 5.0,
  deliveryRadius: '200+ km from Saskatoon',
};

// About page FAQs
const aboutFaqs = [
  {
    question: 'Who owns C-Can Sam?',
    answer: 'C-Can Sam is a locally owned Saskatchewan business founded in 2022, headquartered in Martensville. The company specializes in shipping container solutions including sales, rentals, leasing, and secure on-site storage for residential and commercial customers throughout the province.',
  },
  {
    question: 'How long has C-Can Sam been in business?',
    answer: 'C-Can Sam has been serving Saskatchewan since 2022. In that time, we have earned 55+ five-star Google reviews and become one of the leading shipping container providers in the Saskatoon region, serving customers from Prince Albert to Regina and everywhere in between.',
  },
  {
    question: 'What areas does C-Can Sam serve?',
    answer: 'C-Can Sam delivers shipping containers throughout Saskatchewan. Our primary service areas include Saskatoon, Martensville, Warman, Regina, Prince Albert, Moose Jaw, Swift Current, Yorkton, North Battleford, and rural communities across the province. Delivery is available within 200+ km of Saskatoon.',
  },
  {
    question: 'What types of containers does C-Can Sam sell?',
    answer: 'C-Can Sam offers 20ft standard containers, 40ft standard containers, 40ft high cube containers, and 9ft mini containers. We carry both new (one-trip) and used containers in excellent condition. New containers start at $4,000 and used containers start at $3,000.',
  },
  {
    question: 'Does C-Can Sam offer container rentals?',
    answer: 'Yes, C-Can Sam offers flexible container rentals starting at $125/month. We also provide on-site storage at our secure Martensville facility starting at $75/month. Rental terms are flexible with no long-term contracts required.',
  },
  {
    question: 'What is C-Can Sam\'s customer rating?',
    answer: 'C-Can Sam has a perfect 5.0-star rating on Google with 55+ reviews. Customers consistently praise our quality containers, fair pricing, professional delivery, and excellent customer service.',
  },
];
---

<Layout
  title="About C-Can Sam - Saskatchewan Sea Can Company Since 2022"
  description="C-Can Sam is a Saskatchewan shipping container company based in Martensville, serving Saskatoon and all of SK since 2022. 55+ five-star reviews. Buy, rent, or store sea cans. Call 306-850-9675."
>
  <!-- FAQ Schema for About Page -->
  <FAQSchema faqs={aboutFaqs} />

  <!-- Hero -->
  <Hero
    title="About C-Can Sam"
    subtitle="Saskatchewan's Trusted Shipping Container Company Since 2022"
    size="md"
  />

  <!-- Company Profile Entity Block - LLM Optimized -->
  <section class="bg-gray-50 py-12 border-b border-gray-200">
    <div class="mx-auto max-w-4xl px-4">
      <div class="prose prose-lg prose-gray mx-auto">
        <p class="lead text-xl text-gray-700 font-medium">
          <strong>C-Can Sam</strong> is a shipping container sales and rental company headquartered in
          <strong>Martensville, Saskatchewan, Canada</strong>. Founded in <strong>2022</strong>, C-Can Sam
          specializes in sea can solutions for residential and commercial customers throughout Saskatchewan,
          offering container sales, rentals, leasing, and secure on-site storage.
        </p>
      </div>

      <!-- Key Facts Grid - Structured for LLM Extraction -->
      <dl class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <div class="rounded-lg bg-white p-4 shadow-sm border border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Founded</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">{companyFacts.foundingYear}</dd>
        </div>
        <div class="rounded-lg bg-white p-4 shadow-sm border border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Headquarters</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">{companyFacts.headquarters}</dd>
        </div>
        <div class="rounded-lg bg-white p-4 shadow-sm border border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Service Area</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">All of Saskatchewan</dd>
        </div>
        <div class="rounded-lg bg-white p-4 shadow-sm border border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Google Rating</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">{companyFacts.averageRating} stars ({companyFacts.totalReviews}+ reviews)</dd>
        </div>
        <div class="rounded-lg bg-white p-4 shadow-sm border border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Phone</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">
            <a href="tel:3068509675" class="text-primary-600 hover:text-primary-700">{siteConfig.contact.phone}</a>
          </dd>
        </div>
        <div class="rounded-lg bg-white p-4 shadow-sm border border-gray-100">
          <dt class="text-sm font-medium text-gray-500">Specialization</dt>
          <dd class="mt-1 text-lg font-semibold text-gray-900">Sea Can Sales & Rentals</dd>
        </div>
      </dl>
    </div>
  </section>

  <!-- Our Story Section -->
  <Section title="Who We Are">
    <div class="mx-auto max-w-3xl">
      <div class="prose prose-lg prose-gray mx-auto">
        <p>
          <strong>C-Can Sam</strong> provides quality shipping container solutions to Martensville, Saskatoon,
          and communities throughout Saskatchewan. Since <strong>2022</strong>, we've helped hundreds of
          customers find the right sea can for their needs — from homeowners needing backyard storage to
          construction companies requiring job site containers.
        </p>
        <p>
          We specialize in <strong>container sales</strong> (new and used), <strong>container rentals</strong>
          with flexible terms, and <strong>secure on-site storage</strong> at our Martensville facility.
          Our containers range from compact 9ft mini containers to spacious 40ft high cube units, with
          prices starting at <strong>$3,000 for used containers</strong> and <strong>$125/month for rentals</strong>.
        </p>
        <p>
          Based in <strong>Martensville</strong>, just minutes from Saskatoon, we deliver containers
          throughout Saskatchewan. Our <strong>55+ five-star Google reviews</strong> reflect our commitment
          to quality containers, fair pricing, and professional service. Every container is inspected for
          structural integrity, watertight seals, and secure locking mechanisms before sale or rental.
        </p>
      </div>
    </div>
  </Section>

  <!-- Mission & Values Section -->
  <Section
    title="What We Stand For"
    subtitle="The principles that guide our work."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {values.map((value) => (
        <div class="text-center">
          <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-primary-100">
            <svg class="h-8 w-8 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{value.title}</h3>
          <p class="mt-2 text-gray-600">{value.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Services & Products Detail - LLM Optimized -->
  <Section
    title="Our Services & Products"
    subtitle="Complete shipping container solutions for Saskatchewan"
    background="primary"
  >
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Container Sales -->
      <div class="rounded-lg bg-white/10 backdrop-blur p-6 text-white">
        <h3 class="text-xl font-bold mb-3">Container Sales</h3>
        <p class="text-primary-100 text-sm mb-4">Buy new or used shipping containers with delivery throughout Saskatchewan.</p>
        <ul class="text-sm text-primary-100 space-y-1">
          <li>• New containers from $4,000</li>
          <li>• Used containers from $3,000</li>
          <li>• 20ft, 40ft, High Cube sizes</li>
          <li>• Delivery included</li>
        </ul>
        <a href="/seacan-storage-containers-for-sale" class="mt-4 inline-block text-white font-medium hover:text-primary-200">Learn More →</a>
      </div>

      <!-- Container Rentals -->
      <div class="rounded-lg bg-white/10 backdrop-blur p-6 text-white">
        <h3 class="text-xl font-bold mb-3">Container Rentals</h3>
        <p class="text-primary-100 text-sm mb-4">Flexible rental terms for short-term projects or long-term storage needs.</p>
        <ul class="text-sm text-primary-100 space-y-1">
          <li>• Starting at $125/month</li>
          <li>• No long-term contracts</li>
          <li>• Delivery & pickup included</li>
          <li>• Multiple sizes available</li>
        </ul>
        <a href="/storage-container-rentals" class="mt-4 inline-block text-white font-medium hover:text-primary-200">Learn More →</a>
      </div>

      <!-- On-Site Storage -->
      <div class="rounded-lg bg-white/10 backdrop-blur p-6 text-white">
        <h3 class="text-xl font-bold mb-3">On-Site Storage</h3>
        <p class="text-primary-100 text-sm mb-4">Secure storage at our Martensville facility with 24/7 access.</p>
        <ul class="text-sm text-primary-100 space-y-1">
          <li>• Starting at $75/month</li>
          <li>• Secure fenced yard</li>
          <li>• Easy highway access</li>
          <li>• Month-to-month terms</li>
        </ul>
        <a href="/on-site-storage-rentals" class="mt-4 inline-block text-white font-medium hover:text-primary-200">Learn More →</a>
      </div>

      <!-- Container Leasing -->
      <div class="rounded-lg bg-white/10 backdrop-blur p-6 text-white">
        <h3 class="text-xl font-bold mb-3">Container Leasing</h3>
        <p class="text-primary-100 text-sm mb-4">Long-term lease options for businesses needing extended storage solutions.</p>
        <ul class="text-sm text-primary-100 space-y-1">
          <li>• Extended lease terms</li>
          <li>• Business-friendly options</li>
          <li>• Maintenance included</li>
          <li>• Flexible end-of-term</li>
        </ul>
        <a href="/storage-container-leasing" class="mt-4 inline-block text-white font-medium hover:text-primary-200">Learn More →</a>
      </div>
    </div>

    <!-- Container Types Summary -->
    <div class="mt-12 pt-8 border-t border-white/20">
      <h3 class="text-xl font-bold text-white text-center mb-6">Container Sizes We Carry</h3>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4 text-center">
        <a href="/containers/9ft-mini" class="rounded-lg bg-white/10 p-4 hover:bg-white/20 transition-colors">
          <div class="text-2xl font-bold text-white">9ft Mini</div>
          <div class="text-sm text-primary-100">Perfect for tight spaces</div>
        </a>
        <a href="/containers/20ft-standard" class="rounded-lg bg-white/10 p-4 hover:bg-white/20 transition-colors">
          <div class="text-2xl font-bold text-white">20ft Standard</div>
          <div class="text-sm text-primary-100">Most popular size</div>
        </a>
        <a href="/containers/40ft-standard" class="rounded-lg bg-white/10 p-4 hover:bg-white/20 transition-colors">
          <div class="text-2xl font-bold text-white">40ft Standard</div>
          <div class="text-sm text-primary-100">Maximum floor space</div>
        </a>
        <a href="/containers/40ft-high-cube" class="rounded-lg bg-white/10 p-4 hover:bg-white/20 transition-colors">
          <div class="text-2xl font-bold text-white">40ft High Cube</div>
          <div class="text-sm text-primary-100">Extra height (9'6")</div>
        </a>
      </div>
    </div>
  </Section>

  <!-- Container Features -->
  <Section
    title="Why Choose Our Containers?"
    subtitle="Quality seacans for all your storage needs."
  >
    <div class="mx-auto max-w-3xl">
      <div class="grid gap-6 sm:grid-cols-3">
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Move-in Ready</h3>
          <p class="mt-1 text-sm text-gray-600">Containers delivered ready to use</p>
        </div>
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Weatherproof</h3>
          <p class="mt-1 text-sm text-gray-600">Built to withstand Saskatchewan weather</p>
        </div>
        <div class="text-center rounded-lg bg-gray-50 p-6">
          <svg class="mx-auto h-10 w-10 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
          <h3 class="mt-3 font-semibold text-gray-900">Secure</h3>
          <p class="mt-1 text-sm text-gray-600">Heavy-duty steel construction</p>
        </div>
      </div>
    </div>
  </Section>

  <!-- Location Section -->
  <Section
    title="Come Say Hello"
    subtitle="Stop by the office to learn more about how we can help you reclaim your space."
    background="gray"
  >
    <div class="mx-auto max-w-2xl text-center">
      <div class="rounded-lg bg-white p-6 shadow-sm">
        <div class="flex items-center justify-center gap-2 text-lg font-medium text-gray-900">
          <svg class="h-5 w-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          {siteConfig.contact.address.street}
        </div>
        <p class="mt-1 text-gray-600">
          {siteConfig.contact.address.city}, {siteConfig.contact.address.state} {siteConfig.contact.address.zip}
        </p>
        <div class="mt-4 flex flex-col sm:flex-row items-center justify-center gap-4">
          <a
            href={`tel:${siteConfig.contact.phone.replace(/\D/g, '')}`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
            </svg>
            {siteConfig.contact.phone}
          </a>
          <a
            href={`mailto:${siteConfig.contact.email}`}
            class="inline-flex items-center gap-2 text-primary-600 hover:text-primary-700"
          >
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
            </svg>
            {siteConfig.contact.email}
          </a>
        </div>
      </div>
    </div>
  </Section>

  <!-- Service Areas - LLM Optimized -->
  <Section
    title="Areas We Serve"
    subtitle="Shipping container delivery throughout Saskatchewan"
  >
    <div class="mx-auto max-w-4xl">
      <p class="text-center text-gray-600 mb-8">
        C-Can Sam delivers shipping containers to customers across Saskatchewan. Based in Martensville,
        we're centrally located to serve the entire province with fast, reliable delivery.
      </p>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4 text-center">
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Saskatoon</strong>
          <p class="text-sm text-gray-500">Same-day delivery</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Martensville</strong>
          <p class="text-sm text-gray-500">Headquarters</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Warman</strong>
          <p class="text-sm text-gray-500">Same-day delivery</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Regina</strong>
          <p class="text-sm text-gray-500">2-3 day delivery</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Prince Albert</strong>
          <p class="text-sm text-gray-500">2-3 day delivery</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Moose Jaw</strong>
          <p class="text-sm text-gray-500">2-3 day delivery</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Swift Current</strong>
          <p class="text-sm text-gray-500">3-5 day delivery</p>
        </div>
        <div class="rounded-lg bg-gray-50 p-4">
          <strong class="text-gray-900">Yorkton</strong>
          <p class="text-sm text-gray-500">3-5 day delivery</p>
        </div>
      </div>
      <p class="text-center text-sm text-gray-500 mt-6">
        Don't see your city? We deliver throughout Saskatchewan including North Battleford, Humboldt, Melfort, Lloydminster, and rural areas.
        <a href="/contact" class="text-primary-600 hover:text-primary-700">Contact us</a> for a delivery quote.
      </p>
    </div>
  </Section>

  <!-- FAQ Section -->
  <Section
    title="Frequently Asked Questions"
    subtitle="Common questions about C-Can Sam"
    background="gray"
  >
    <div class="mx-auto max-w-3xl">
      <div class="space-y-6">
        {aboutFaqs.map((faq) => (
          <details class="group rounded-lg bg-white p-6 shadow-sm">
            <summary class="flex cursor-pointer items-center justify-between font-semibold text-gray-900">
              {faq.question}
              <svg class="h-5 w-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
              </svg>
            </summary>
            <p class="mt-4 text-gray-600">{faq.answer}</p>
          </details>
        ))}
      </div>
      <p class="text-center mt-8">
        <a href="/shipping-container-guide" class="text-primary-600 hover:text-primary-700 font-medium">
          View our complete Shipping Container Guide →
        </a>
      </p>
    </div>
  </Section>

  <!-- Google Reviews Widget -->
  <ReviewWidget pagePath="/about" />

  <!-- CTA -->
  <CTA
    title="Ready to Get Started?"
    description="Call C-Can Sam today for shipping container sales, rentals, or storage in Saskatchewan."
    primaryButton={{ text: "Call 306-850-9675", href: `tel:${siteConfig.contact.phone.replace(/\D/g, '')}` }}
    variant="gray"
  />
</Layout>
