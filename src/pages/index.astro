---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Section from '../components/Section.astro';
import FeatureGrid from '../components/FeatureGrid.astro';
import Card from '../components/Card.astro';
import Testimonial from '../components/Testimonial.astro';
import CTA from '../components/CTA.astro';
import { siteConfig } from '../config/site';

// Define your features/services
const features = [
  {
    title: 'Service One',
    description: 'Brief description of your first service and how it helps customers achieve their goals.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" /></svg>`,
  },
  {
    title: 'Service Two',
    description: 'Brief description of your second service and the value it provides to your clients.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
  },
  {
    title: 'Service Three',
    description: 'Brief description of your third service and what makes it stand out from competitors.',
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" /></svg>`,
  },
];

// Example testimonials
const testimonials = [
  {
    quote: "Working with this team has transformed our business. Their expertise and dedication are unmatched.",
    author: "Jane Smith",
    role: "CEO",
    company: "Tech Corp",
  },
  {
    quote: "Professional, responsive, and delivers results. Highly recommend their services to anyone.",
    author: "John Doe",
    role: "Marketing Director",
    company: "Growth Inc",
  },
];
---

<Layout title="Home">
  <!-- Hero Section -->
  <Hero
    title="Your Compelling Headline Goes Here"
    subtitle="A clear, concise subheadline that explains your value proposition and what makes your business unique."
    primaryCta={{ text: "Get Started", href: "/contact" }}
    secondaryCta={{ text: "Learn More", href: "/about" }}
  />

  <!-- Features/Services Section -->
  <Section
    title="What We Offer"
    subtitle="Everything you need to succeed, all in one place."
    background="gray"
  >
    <FeatureGrid features={features} columns={3} />
  </Section>

  <!-- About Section -->
  <Section
    title="Why Choose Us"
    subtitle="We're committed to delivering exceptional results for every client."
  >
    <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
      <div>
        <p class="text-lg text-gray-600">
          With years of experience in the industry, we understand what it takes to help
          businesses like yours succeed. Our team is dedicated to providing personalized
          solutions that meet your unique needs.
        </p>
        <ul class="mt-8 space-y-4">
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600">Experienced professionals dedicated to your success</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600">Proven track record of delivering results</span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="mt-1 h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-gray-600">Personalized approach tailored to your needs</span>
          </li>
        </ul>
        <div class="mt-8">
          <a
            href="/about"
            class="inline-flex items-center text-primary-600 font-medium hover:text-primary-700"
          >
            Learn more about us
            <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
      <div class="relative">
        <!-- Placeholder for image -->
        <div class="aspect-video rounded-xl bg-gray-200 flex items-center justify-center">
          <span class="text-gray-400">Image placeholder</span>
        </div>
      </div>
    </div>
  </Section>

  <!-- Testimonials Section -->
  <Section
    title="What Our Clients Say"
    subtitle="Don't just take our word for it."
    background="gray"
  >
    <div class="grid gap-8 md:grid-cols-2">
      {testimonials.map((testimonial) => (
        <Testimonial {...testimonial} />
      ))}
    </div>
  </Section>

  <!-- CTA Section -->
  <CTA
    title="Ready to Get Started?"
    description="Contact us today to discuss how we can help your business grow."
    primaryButton={{ text: "Contact Us", href: "/contact" }}
    secondaryButton={{ text: "View Services", href: "/services" }}
  />
</Layout>
