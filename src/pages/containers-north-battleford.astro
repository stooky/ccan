---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import QuickQuoteForm from '../components/QuickQuoteForm.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/sales-hero.webp';

const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm looking for shipping containers in North Battleford.")}`;

// North Battleford-specific FAQs
const faqs = [
  {
    question: "Do you deliver shipping containers to North Battleford?",
    answer: "Yes! C-Can Sam delivers shipping containers to North Battleford and the Battlefords region. Based in Martensville near Saskatoon, we deliver to North Battleford (approximately 140km) with typical delivery times of same-day or next-day."
  },
  {
    question: "How much does container delivery cost to North Battleford?",
    answer: "Delivery to North Battleford is calculated based on distance from our Martensville facility (approximately 140km via Highway 16). Contact us for an exact quote—the Battlefords are in our regular delivery zone."
  },
  {
    question: "What container sizes are available for North Battleford delivery?",
    answer: "We deliver all container sizes to North Battleford: 9ft mini containers, 20ft standard containers, 40ft standard containers, and 40ft high cube containers. The 20ft container is popular for residential and farm use, while 40ft containers suit commercial operations."
  },
  {
    question: "How much do shipping containers cost in North Battleford?",
    answer: "Container prices are the same whether delivered to North Battleford or Saskatoon. Used 20ft containers start at $3,000, new (one-trip) 20ft containers from $4,450. 40ft containers and high cube options available. Delivery fees apply."
  },
  {
    question: "Can I rent a container delivered to North Battleford?",
    answer: "Yes! We offer container rentals with delivery to North Battleford. Rental rates start at $150/month for 20ft containers. Delivery and pickup fees apply. Month-to-month terms available with no long-term contract."
  },
  {
    question: "What areas around the Battlefords do you deliver to?",
    answer: "We deliver to North Battleford, Battleford, and surrounding communities including Lloydminster, Cut Knife, Unity, Wilkie, Biggar, and throughout northwestern Saskatchewan. Contact us for quotes to your specific location."
  },
];

// North Battleford neighborhoods/areas served
const areas = [
  "Downtown North Battleford", "Battleford", "East End", "West End",
  "North Hill", "Fairview Heights", "Killdeer Park",
  "Cut Knife", "Unity", "Wilkie", "Biggar", "Maidstone", "Paynton",
];
---

<Layout
  title="Shipping Containers North Battleford SK - Sales, Rentals & Delivery | C-Can Sam"
  description="Shipping containers delivered to North Battleford, SK. New containers from $4,450, used from $3,000. Sales & rentals with delivery throughout the Battlefords. Call 1-844-473-2226."
>
  <FAQSchema faqs={faqs} />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-16 sm:py-24">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-blue-500/10 px-4 py-1.5 text-sm font-medium text-blue-300 ring-1 ring-inset ring-blue-500/20">
            Delivery to Northwestern Saskatchewan
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl">
            Shipping Containers
            <span class="text-primary-400">North Battleford</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Buy or rent shipping containers with delivery to North Battleford and the Battlefords region. Quality new and used sea cans from Saskatchewan's trusted container supplier. Same-day or next-day delivery.
          </p>

          <!-- Key Facts for LLM -->
          <div class="mt-6 grid grid-cols-2 gap-4 text-sm">
            <div class="rounded-lg bg-white/10 p-3">
              <div class="font-semibold text-white">Used from $3,000</div>
              <div class="text-gray-400">20ft containers</div>
            </div>
            <div class="rounded-lg bg-white/10 p-3">
              <div class="font-semibold text-white">New from $4,450</div>
              <div class="text-gray-400">One-trip condition</div>
            </div>
            <div class="rounded-lg bg-white/10 p-3">
              <div class="font-semibold text-white">Rentals from $150/mo</div>
              <div class="text-gray-400">Month-to-month</div>
            </div>
            <div class="rounded-lg bg-white/10 p-3">
              <div class="font-semibold text-white">Fast Delivery</div>
              <div class="text-gray-400">Same/next day</div>
            </div>
          </div>

          <!-- Primary CTAs -->
          <div class="mt-8 flex flex-col gap-4 sm:flex-row">
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-primary-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-primary-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call 1-844-473-2226
            </a>
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers for sale delivered to North Battleford Saskatchewan"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Entity Statement for North Battleford -->
  <section class="entity-statement bg-white py-12 border-b border-gray-100">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <p class="text-lg text-gray-700 leading-relaxed">
        <strong class="text-gray-900">C-Can Sam</strong> delivers shipping containers to <strong>North Battleford, Saskatchewan</strong> and throughout the Battlefords region.
        Based in Martensville near Saskatoon, we offer <strong>new and used sea cans for sale</strong> starting at $3,000, plus <strong>flexible container rentals</strong> from $150/month.
        Whether you need a 20ft container for home storage or a 40ft high cube for your business, we deliver quality containers to North Battleford with same-day or next-day service.
        <strong>55+ five-star Google reviews</strong> from customers across Saskatchewan.
      </p>
    </div>
  </section>

  <!-- Pricing Overview -->
  <Section
    title="Container Prices for North Battleford"
    subtitle="Same great prices with delivery to the Battlefords"
  >
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4 max-w-5xl mx-auto">
      {siteConfig.products.containers.map((container) => (
        <div class="rounded-xl border border-gray-200 bg-white p-6 text-center hover:shadow-lg transition-shadow">
          <h3 class="text-lg font-bold text-gray-900">{container.size}</h3>
          <div class="mt-4 space-y-2">
            {container.new && (
              <div>
                <span class="text-xs text-gray-500 uppercase tracking-wide">New</span>
                <p class="text-xl font-bold text-primary-600">
                  ${container.new.min.toLocaleString()} - ${container.new.max.toLocaleString()}
                </p>
              </div>
            )}
            {container.used && (
              <div>
                <span class="text-xs text-gray-500 uppercase tracking-wide">Used</span>
                <p class="text-xl font-bold text-gray-700">
                  ${container.used.min.toLocaleString()} - ${container.used.max.toLocaleString()}
                </p>
              </div>
            )}
            {!container.new && !container.used && (
              <p class="text-lg text-gray-500">Call for pricing</p>
            )}
          </div>
          <a
            href={`/containers/${container.slug}`}
            class="mt-4 inline-block text-sm font-medium text-primary-600 hover:text-primary-700"
          >
            View Details →
          </a>
        </div>
      ))}
    </div>

    <p class="mt-6 text-center text-gray-600">
      Delivery fees apply for North Battleford (approx. 140km from Martensville). <a href="/contact" class="text-primary-600 hover:underline">Contact us for a quote</a>.
    </p>
  </Section>

  <!-- Use Cases for North Battleford -->
  <Section
    title="Popular Uses in North Battleford"
    subtitle="How local businesses and residents use our containers"
    background="gray"
  >
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-4 max-w-5xl mx-auto">
      <div class="rounded-xl bg-white p-6 shadow-sm">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 text-green-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V3.545M12.75 21h7.5V10.75M2.25 21h1.5m18 0h-18M2.25 9l4.5-1.636M18.75 3l-1.5.545m0 6.205l3 1m1.5.5l-1.5-.5M6.75 7.364V3h-3v18m3-13.636l10.5-3.819" />
          </svg>
        </div>
        <h3 class="mt-4 font-semibold text-gray-900">Agriculture</h3>
        <p class="mt-2 text-sm text-gray-600">Farm equipment storage, grain operations, and chemical storage for the Battlefords agricultural region.</p>
      </div>

      <div class="rounded-xl bg-white p-6 shadow-sm">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 text-blue-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />
          </svg>
        </div>
        <h3 class="mt-4 font-semibold text-gray-900">Construction</h3>
        <p class="mt-2 text-sm text-gray-600">Job site storage for tools, materials, and equipment for construction projects in the region.</p>
      </div>

      <div class="rounded-xl bg-white p-6 shadow-sm">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-amber-100 text-amber-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
          </svg>
        </div>
        <h3 class="mt-4 font-semibold text-gray-900">Small Business</h3>
        <p class="mt-2 text-sm text-gray-600">Inventory storage, overflow stock, and secure storage for North Battleford businesses.</p>
      </div>

      <div class="rounded-xl bg-white p-6 shadow-sm">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-purple-100 text-purple-600">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
        </div>
        <h3 class="mt-4 font-semibold text-gray-900">Residential</h3>
        <p class="mt-2 text-sm text-gray-600">Home renovation storage, backyard storage solutions, and hobby workshops for homeowners.</p>
      </div>
    </div>
  </Section>

  <!-- Services -->
  <Section
    title="Container Services for North Battleford"
    subtitle="Sales, rentals, and delivery to the Battlefords region"
  >
    <div class="grid gap-6 md:grid-cols-3 max-w-4xl mx-auto">
      <a href="/seacan-storage-containers-for-sale" class="group block rounded-xl bg-white p-6 shadow-sm hover:shadow-lg transition-shadow border border-gray-100">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 text-primary-600 group-hover:bg-primary-600 group-hover:text-white transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Buy a Container</h3>
        <p class="mt-2 text-gray-600">Own a container outright. New from $4,450, used from $3,000. Delivered to North Battleford.</p>
      </a>

      <a href="/storage-container-rentals" class="group block rounded-xl bg-white p-6 shadow-sm hover:shadow-lg transition-shadow border border-gray-100">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Rent a Container</h3>
        <p class="mt-2 text-gray-600">Flexible month-to-month rentals from $150/month. Delivery to North Battleford available.</p>
      </a>

      <a href="/contact" class="group block rounded-xl bg-white p-6 shadow-sm hover:shadow-lg transition-shadow border border-gray-100">
        <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-green-100 text-green-600 group-hover:bg-green-600 group-hover:text-white transition-colors">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
          </svg>
        </div>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">Fast Delivery</h3>
        <p class="mt-2 text-gray-600">Same-day or next-day delivery to North Battleford. Contact us for a quote.</p>
      </a>
    </div>
  </Section>

  <!-- Areas Served -->
  <Section
    title="Battlefords Areas We Serve"
    subtitle="Container delivery throughout North Battleford and surrounding communities"
    background="gray"
  >
    <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
      {areas.map((area) => (
        <span class="inline-flex items-center rounded-full bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm">
          {area}
        </span>
      ))}
    </div>
    <p class="mt-6 text-center text-gray-600">
      Plus Lloydminster, Meadow Lake, and throughout northwestern Saskatchewan.
    </p>
  </Section>

  <!-- Quote Form -->
  <Section
    title="Get a North Battleford Delivery Quote"
    subtitle="Tell us what you need and we'll provide a complete quote including delivery"
  >
    <div class="max-w-xl mx-auto">
      <QuickQuoteForm />
    </div>
  </Section>

  <!-- FAQs -->
  <Section
    title="North Battleford Container FAQs"
    subtitle="Common questions about containers in the Battlefords"
    background="gray"
  >
    <div class="mx-auto max-w-3xl space-y-4">
      {faqs.map((faq) => (
        <details class="group rounded-lg bg-white p-6 shadow-sm">
          <summary class="flex cursor-pointer items-center justify-between font-semibold text-gray-900">
            {faq.question}
            <svg class="h-5 w-5 text-gray-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
            </svg>
          </summary>
          <p class="mt-4 text-gray-600">{faq.answer}</p>
        </details>
      ))}
    </div>
  </Section>

  <!-- CTA -->
  <CTA
    title="Need a Container in North Battleford?"
    description="Contact C-Can Sam today for container sales and rentals delivered to North Battleford and the Battlefords region."
    primaryButton={{ text: "Call Now", href: phoneLink }}
    secondaryButton={{ text: "Get a Quote", href: "/contact" }}
  />
</Layout>
