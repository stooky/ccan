---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';

const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Popular pages to suggest
const popularPages = [
  { name: 'Buy Containers', href: '/seacan-storage-containers-for-sale', description: 'New & used sea cans for sale' },
  { name: 'Rent Containers', href: '/storage-container-rentals', description: 'Flexible month-to-month rentals' },
  { name: 'Container Guide', href: '/shipping-container-guide', description: 'Learn about container sizes & types' },
  { name: 'Contact Us', href: '/contact', description: 'Get a free quote' },
];
---

<Layout
  title="Page Not Found"
  description="The page you're looking for doesn't exist. Find shipping container sales, rentals, and storage options at C-Can Sam."
>
  <section class="min-h-[60vh] flex items-center justify-center py-16 sm:py-24">
    <div class="mx-auto max-w-2xl px-4 text-center">
      <!-- 404 Icon -->
      <div class="mx-auto flex h-24 w-24 items-center justify-center rounded-full bg-primary-100">
        <svg class="h-12 w-12 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
        </svg>
      </div>

      <!-- Error Message -->
      <h1 class="mt-6 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        Page Not Found
      </h1>
      <p class="mt-4 text-lg text-gray-600">
        Looks like this container got shipped to the wrong location. Let's get you back on track.
      </p>

      <!-- Primary CTAs -->
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href="/"
          class="inline-flex items-center gap-2 rounded-lg bg-primary-600 px-6 py-3 text-base font-semibold text-white shadow-sm hover:bg-primary-700 transition-colors"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
          Go Home
        </a>
        <a
          href={phoneLink}
          class="inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 text-base font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
          </svg>
          Call Us
        </a>
      </div>

      <!-- Popular Pages -->
      <div class="mt-12">
        <h2 class="text-sm font-semibold text-gray-900">Popular Pages</h2>
        <ul class="mt-4 grid gap-4 sm:grid-cols-2">
          {popularPages.map((page) => (
            <li>
              <a
                href={page.href}
                class="group block rounded-lg border border-gray-200 p-4 text-left hover:border-primary-500 hover:bg-primary-50 transition-colors"
              >
                <p class="font-semibold text-gray-900 group-hover:text-primary-600">
                  {page.name}
                </p>
                <p class="mt-1 text-sm text-gray-500">
                  {page.description}
                </p>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Search suggestion -->
      <p class="mt-8 text-sm text-gray-500">
        Looking for something specific?{' '}
        <a href="/contact" class="text-primary-600 hover:text-primary-700 font-medium">
          Contact us
        </a>{' '}
        and we'll help you find it.
      </p>
    </div>
  </section>
</Layout>
