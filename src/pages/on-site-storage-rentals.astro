---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Section from '../components/Section.astro';
import CTA from '../components/CTA.astro';
import ReviewWidget from '../components/ReviewWidget.astro';
import FAQSchema from '../components/schema/FAQSchema.astro';
import { siteConfig } from '../config/site';
import heroImage from '../assets/images/onsite-storage-hero.webp';

// WhatsApp link with pre-filled message
const whatsappLink = `${siteConfig.social.whatsapp}?text=${encodeURIComponent("Hi! I'm interested in storing a container at your Martensville yard.")}`;
const phoneLink = `tel:${siteConfig.contact.phone.replace(/\D/g, '')}`;

// Container Types for Yard Storage - stored at C-Can Sam facility
const containers = [
  {
    size: "20' Standard",
    dimensions: "20' L × 8' W × 8'6\" H",
    capacity: "1,172 cubic feet",
    ideal: "Personal belongings, seasonal items, small moves",
    image: "/images/containers/20-standard.png",
    popular: false,
    monthly: { min: 75, max: 100 },
    deposit: 200,
  },
  {
    size: "40' Standard",
    dimensions: "40' L × 8' W × 8'6\" H",
    capacity: "2,390 cubic feet",
    ideal: "Full household, business inventory, large equipment",
    image: "/images/containers/40-standard.png",
    popular: true,
    monthly: { min: 125, max: 150 },
    deposit: 300,
  },
  {
    size: "40' High Cube",
    dimensions: "40' L × 8' W × 9'6\" H",
    capacity: "2,694 cubic feet",
    ideal: "Maximum storage, tall items, commercial use",
    image: "/images/containers/40-high-cube.png",
    popular: false,
    monthly: { min: 150, max: 175 },
    deposit: 300,
  },
];

// Benefits of Yard Storage
const benefits = [
  {
    title: "Lower Monthly Cost",
    description: "No delivery fees and lower monthly rates than having a container at your property.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  },
  {
    title: "Secure Facility",
    description: "Your belongings are protected at our monitored Martensville yard with controlled access.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" /></svg>`,
  },
  {
    title: "No Space Needed",
    description: "Don't have room on your property? Keep your home or business clutter-free.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>`,
  },
  {
    title: "Flexible Access",
    description: "Visit your container during business hours. Just minutes from Saskatoon.",
    icon: `<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" /></svg>`,
  },
];

// Who uses yard storage
const users = [
  { title: "Homeowners Downsizing", description: "Store furniture and belongings while transitioning between homes or decluttering." },
  { title: "Between Moves", description: "Bridge the gap when selling and buying homes. No rush to find the perfect place." },
  { title: "Snowbirds", description: "Store vehicles, RVs, or household items while you're away for the winter." },
  { title: "Small Businesses", description: "Affordable inventory storage without the overhead of warehouse space." },
  { title: "Renovation Projects", description: "Keep furniture safe while your home is under construction." },
  { title: "Estate Settlement", description: "Secure storage while sorting through belongings and distributing items." },
];

// FAQs
const faqs = [
  {
    question: "Where is my container stored?",
    answer: "Your container is stored at our secure facility in Martensville, SK—just 10 minutes from Saskatoon. The facility is monitored with controlled access."
  },
  {
    question: "When can I access my container?",
    answer: "You can access your container during business hours (Monday-Friday, 9 AM - 5 PM). Saturday access is available by appointment. Just give us a call to arrange a time."
  },
  {
    question: "How do I load my container?",
    answer: "You can either bring items to our facility and load directly, or we offer a drop-off service—we bring a container to your location, you load it, and we bring it back to our yard."
  },
  {
    question: "What's the drop-off service?",
    answer: "For convenience, we can deliver a container to your location so you can load at your own pace. Once done, we pick it up and return it to our facility. This costs $150-$300 depending on container size and distance."
  },
  {
    question: "How long can I store my container?",
    answer: "Our rentals are month-to-month with no long-term commitment. Store for as long as you need, whether it's a few months or several years."
  },
];
---

<Layout
  title="Yard Storage - Containers at Our Martensville Facility | Saskatchewan"
  description="Affordable container storage at our secure Martensville yard near Saskatoon. 20ft, 40ft & High Cube containers from $75/month. No delivery fees, flexible access. Call 1-844-473-2226."
>
  <FAQSchema faqs={faqs} />

  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-primary-900 py-20 sm:py-28">
    <div class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-10"></div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-12 lg:grid-cols-2 lg:items-center">
        <div>
          <span class="inline-flex items-center rounded-full bg-primary-500/10 px-4 py-1.5 text-sm font-medium text-primary-300 ring-1 ring-inset ring-primary-500/20">
            Stored at Our Secure Facility
          </span>
          <h1 class="mt-6 text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl">
            Yard
            <span class="text-primary-400">Storage</span>
          </h1>
          <p class="mt-6 text-lg leading-8 text-gray-300">
            Don't have space on your property? Store your container at our secure Martensville facility. Lower monthly rates, no delivery fees, and easy access just minutes from Saskatoon.
          </p>

          <!-- Primary CTAs -->
          <div class="mt-10 flex flex-col gap-4 sm:flex-row">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-green-600 px-6 py-4 text-lg font-semibold text-white shadow-lg transition-all hover:bg-green-500 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us Now
            </a>
            <a
              href={phoneLink}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-white px-6 py-4 text-lg font-semibold text-gray-900 shadow-lg transition-all hover:bg-gray-100 hover:shadow-xl"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call {siteConfig.contact.phone}
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative">
          <div class="overflow-hidden rounded-2xl shadow-2xl">
            <Image
              src={heroImage}
              alt="Shipping containers at C-Can Sam secure storage yard in Martensville"
              class="w-full h-auto object-cover"
              widths={[600, 900, 1200, 1400]}
              sizes="(max-width: 768px) 100vw, 50vw"
              loading="eager"
            />
          </div>
          <!-- Floating badge -->
          <div class="absolute -bottom-4 -left-4 rounded-xl bg-primary-600 px-4 py-3 shadow-lg">
            <p class="text-sm font-semibold text-white">Secure Facility</p>
            <p class="text-lg font-bold text-white">Martensville, SK</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Trust Banner -->
  <div class="bg-primary-600 py-4">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-6 text-center font-bold text-white">
        <span>Stored at Our Facility</span>
        <span class="hidden sm:inline">•</span>
        <span>No Delivery Fees</span>
        <span class="hidden sm:inline">•</span>
        <span>From $75/month</span>
      </div>
    </div>
  </div>

  <!-- Google Reviews Widget (after hero) -->
  <ReviewWidget pagePath="/on-site-storage-rentals" />

  <!-- Container Types - matching sales page layout -->
  <Section
    title="Yard Storage Options"
    subtitle="Containers stored at our secure Martensville facility. Access during business hours."
    background="gray"
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {containers.map((container) => (
        <div class={`relative rounded-2xl bg-white p-6 shadow-sm transition-all hover:shadow-xl ${container.popular ? 'ring-2 ring-primary-500' : ''}`}>
          {container.popular && (
            <span class="absolute -top-3 left-1/2 -translate-x-1/2 rounded-full bg-primary-500 px-4 py-1 text-sm font-semibold text-white">
              Most Popular
            </span>
          )}

          <!-- Container Visual -->
          <div class="flex items-center justify-center bg-transparent p-4">
            <img
              src={container.image}
              alt={`${container.size} shipping container for yard storage in Saskatchewan`}
              class="h-auto w-full max-h-48 object-contain"
              loading="lazy"
              decoding="async"
            />
          </div>

          <h3 class="mt-4 text-2xl font-bold text-gray-900">{container.size}</h3>

          <!-- Pricing Section - similar to sales page -->
          <div class="mt-4 grid grid-cols-2 gap-3">
            {/* Monthly - Primary color */}
            <div class="rounded-lg bg-primary-50 p-3 border border-primary-100">
              <p class="text-xs font-medium text-primary-700 uppercase tracking-wide">Monthly</p>
              <p class="mt-1 text-lg font-bold text-primary-800">
                ${container.monthly.min}<span class="text-sm font-normal">-${container.monthly.max}</span>
              </p>
            </div>
            {/* Deposit - Gray */}
            <div class="rounded-lg bg-gray-100 p-3 border border-gray-300">
              <p class="text-xs font-medium text-gray-700 uppercase tracking-wide">Deposit</p>
              <p class="mt-1 text-lg font-bold text-gray-900">
                ${container.deposit}
              </p>
            </div>
          </div>

          <dl class="mt-4 space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-gray-500">Dimensions</dt>
              <dd class="font-medium text-gray-900">{container.dimensions}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Capacity</dt>
              <dd class="font-medium text-gray-900">{container.capacity}</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Ideal for</dt>
              <dd class="font-medium text-gray-900 text-right max-w-[60%]">{container.ideal}</dd>
            </div>
          </dl>

          <div class="mt-6 flex gap-2">
            <a
              href={whatsappLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-green-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-green-500"
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              WhatsApp Us
            </a>
            <a
              href={phoneLink}
              class="flex flex-1 items-center justify-center gap-2 rounded-lg bg-primary-600 px-3 py-3 font-semibold text-white transition-colors hover:bg-primary-500"
            >
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
              Call Us
            </a>
          </div>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-gray-600">
      Prices shown are monthly rates for storage at our Martensville facility. No delivery fees required.
      <br /><strong>Optional drop-off service available</strong> if you want us to bring a container to your location for loading ($150-$300).
    </p>
  </Section>

  <!-- Why Yard Storage Section -->
  <Section
    title="Why Store With Us?"
    subtitle="Affordable, secure storage at our Martensville facility."
  >
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {benefits.map((benefit) => (
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-lg bg-primary-100 text-primary-600">
            <Fragment set:html={benefit.icon} />
          </div>
          <h3 class="mt-4 text-lg font-semibold text-gray-900">{benefit.title}</h3>
          <p class="mt-2 text-gray-600">{benefit.description}</p>
        </div>
      ))}
    </div>
  </Section>

  <!-- Two Ways to Load -->
  <Section
    title="How to Load Your Container"
    subtitle="Two convenient options to get your items into storage."
    background="gray"
  >
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-2xl bg-white p-8 border-2 border-gray-200">
        <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-gray-100 text-gray-700">
          <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V3.545M12.75 21h7.5V10.75M2.25 21h1.5m18 0h-18M2.25 9l4.5-1.636M18.75 3l-1.5.545m0 6.205l3 1m1.5.5l-1.5-.5M6.75 7.364V3h-3v18m3-13.636l10.5-3.819" />
          </svg>
        </div>
        <h3 class="mt-4 text-xl font-bold text-gray-900">Load at Our Facility</h3>
        <p class="mt-2 text-gray-600">Bring your items to our Martensville yard and load directly into your container. No extra fees—just convenient access during business hours.</p>
        <ul class="mt-4 space-y-2">
          <li class="flex items-center gap-2 text-sm">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            <span class="text-gray-700">No additional fees</span>
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            <span class="text-gray-700">Drive right up to your container</span>
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg class="h-5 w-5 flex-shrink-0 text-gray-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            <span class="text-gray-700">10 minutes from Saskatoon</span>
          </li>
        </ul>
      </div>

      <div class="rounded-2xl bg-primary-50 p-8 border-2 border-primary-200 relative">
        <div class="absolute -top-3 left-6 bg-primary-600 text-white text-xs font-bold px-3 py-1 rounded-full">
          OPTIONAL SERVICE
        </div>
        <div class="flex h-14 w-14 items-center justify-center rounded-xl bg-primary-100 text-primary-700">
          <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
          </svg>
        </div>
        <h3 class="mt-4 text-xl font-bold text-gray-900">Drop-Off Service</h3>
        <p class="mt-2 text-gray-600">We deliver a container to your location so you can load at your own pace. Once you're done, we pick it up and bring it back to our facility.</p>
        <ul class="mt-4 space-y-2">
          <li class="flex items-center gap-2 text-sm">
            <svg class="h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            <span class="text-gray-700">$150-$300 (within 50km)</span>
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg class="h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            <span class="text-gray-700">Load at your own pace</span>
          </li>
          <li class="flex items-center gap-2 text-sm">
            <svg class="h-5 w-5 flex-shrink-0 text-primary-600" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            <span class="text-gray-700">We handle all transport</span>
